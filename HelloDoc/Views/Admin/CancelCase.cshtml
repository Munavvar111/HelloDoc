
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close bg-info border border-info" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="fs-1">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3"><span class="">Patient Name : <span class="text-info fw-1" id="patientname"></span></span></div>
                <form asp-action="CancelCase" id="cancelCaseForm">
                    <input type="hidden" class="requestid" id="requestIdInputCancel" />
                    <div class="mb-3">
                        <select class="form-select " aria-label="Default select example" name="CancelReason" id="cancelReason">
                            <option selected disabled>Please Select The Reason</option>
                            @if (Model.Count != 0)
                            {
                                <!-- Check if Model has elements -->
                                @foreach (var cancelReason in Model[0].Cancel)
                                {
                                    <!-- Iterate over the Cancel property of the first element in Model -->
                                    <option value="@cancelReason.CancelReasonId">@cancelReason.CancelCaseReson</option>
                                    <!-- Generate an option element for each cancelReason -->
                                }
                            }

                            </select>
                        <span class="error-CancelReason text-danger remove"></span>
                    </div>
                    <div>
                        <div class="form-floating">
                            <textarea class="form-control additionalnote"
                                      name="notescancel"
                                      placeholder="Leave a comment here"
                                      id="floatingTextarea2"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2">
                                Provide Additional Notes
                            </label>
                            <span class="error-notescancel text-danger remove"></span>

                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-end">

                        <button class="btn btn-outline-info mx-4 CancelConfirm" type="submit" id="CancelConfirm">Confirm</button>
                        <button type="button" class="btn btn-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
                <div>
                </div>
            </div>

        </div>
    </div>
</div>



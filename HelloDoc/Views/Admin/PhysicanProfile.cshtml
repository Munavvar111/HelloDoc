        });

        $("#SubBtn").toggle();
    }
    function toggleAdminEdit() {
        var inputFields = document.querySelectorAll('#accountinginfo input,#accountinginfo select');

        inputFields.forEach(function (input) {
            input.disabled = !input.disabled;
        });

        $("#SubAdminBtn").toggle();
    }

</script>


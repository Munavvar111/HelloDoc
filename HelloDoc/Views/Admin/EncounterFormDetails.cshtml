@model DataAccessLayer.CustomModel.ViewEncounterForm
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Encounter Form Details</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .encounterForm {
            background-color: #fff;
            border: 2px solid #3498db;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            margin: 20px;
            padding: 20px;
            max-width: 800px;
            margin: auto;
        }

        h2 {
            color: #3498db;
            text-align: center;
            font-size: 28px;
            margin-bottom: 20px;
        }

        .details {
            padding: 10px;
        }

        .data {
            margin-bottom: 15px;
            border: 2px solid #ddd;
            padding: 15px;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

            .data span {
                font-weight: bold;
                color: #555;
            }

        .followup {
            color: #e74c3c;
            font-weight: bold;
            font-size: 18px;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="encounterForm h-100">
        <h2>Encounter Form Details</h2>
    <div class="details">
        <h5><span>First Name: </span> @Model.FirstName </h5>
        <h5><span>Last Name: </span> @Model.LastName </h5>
        <h5><span>Location: </span> @Model.Location </h5>
        <h5><span>Date of Birth: </span> @Model.DateOfBirth </h5>
        <h5><span>Date of Request: </span> @Model.DateOfService </h5>
        <h5><span>Email: </span> @Model.Email </h5>
        <h5><span>History of Present Illness or Injury: </span> @Model.HistoryOfPresentIllness </h5>
        <h5><span>Medical History: </span> @Model.MedicalHistory </h5>
        <h5><span>Medications: </span> @Model.Medications </h5>
        <h5><span>Allergies: </span> @Model.Allergies </h5>
        <h5><span>Temp: </span> @Model.Temperature </h5>
        <h5><span>HR: </span> @Model.HR </h5>
        <h5><span>RR: </span> @Model.RR </h5>
        <h5><span>Blood Pressure Diastolic: </span> @Model.BPSystolic </h5>
        <h5><span>Blood Pressure Systolic: </span> @Model.BPDiastolic </h5>
        <h5><span>O2: </span> @Model.O2 </h5>
        <h5><span>Heent: </span> @Model.Heent </h5>
        <h5><span>Pain: </span> @Model.Pain </h5>
        <h5><span>CV: </span> @Model.CV </h5>
        <h5><span>Chest: </span> @Model.Chest </h5>
        <h5><span>ABD: </span> @Model.ABD </h5>
        <h5><span>Extremities: </span> @Model.Extr </h5>
        <h5><span>Skin: </span> @Model.Skin </h5>
        <h5><span>Neuro: </span> @Model.Neuro </h5>
        <h5><span>Other: </span> @Model.Other </h5>
        <h5><span>Diagnosis: </span> @Model.Diagnosis </h5>
        <h5><span>Treatment Plan: </span> @Model.TreatmentPlan </h5>
        <h5><span>Medical Dispensed: </span> @Model.MedicationsDispensed </h5>
        <h5><span>Procedures: </span> @Model.Procedures</h5>
        <h5><div class="data followup"><span>FOLLOWUP: </span> @Model.Followup </h5>
    </div>
    </div>
</body>
</html>
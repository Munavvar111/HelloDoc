@model DataAccessLayer.CustomModel.AdminProfileVm;
@{
    Layout = "~/Views/Shared/_Layout4.cshtml";
}

@{
    ViewData["Title"] = "My Profile";
}
<section>
    <div class="container bg-light mt-4">
        <div class="d-flex justify-content-between my-3">
            <div class="d-flex">
                <span class="fs-2 text-muted fw-bold">My Profile</span>
            </div>
            <div class="d-flex justify-content-end">
                <a asp-controller="Admin" asp-action="Index" asp-area=""
                   class="btn btn-outline-info d-flex align-items-center">
                    <span class="material-symbols-outlined"> chevron_left </span> Back
                </a>
            </div>
        </div>
        <div class="container border rounded-3 p-3 p-md-5 mb-3 d-flex flex-column gap-4 bg-white">
            <h5 class="fw-bold my-3">Account Information</h5>
            <form method="post" asp-controller="AdminDashboard" asp-action="ResetAdminPassword">
                <div class="row row-cols-1 row-cols-md-2 g-3">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for=@Model.AdminAccountInfo.Username type="text" class="form-control" id="username" placeholder="User Name">
                            <label for="username">User Name</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for=@Model.AdminAccountInfo.Password type="text" class="form-control" id="Password" placeholder="Password">
                            <label for="Password">Password</label>
                        </div>
                    </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <div class="form-floating">
                            <input asp-for=@Model.AdminAccountInfo.Username type="text" class="form-control" id="username" placeholder="User Name">
                            <label for="username">User Name</label>
                        </div>
                    </div>
                    </div>
                    <div class="col">
                    <div class="form-floating mb-3">
                        <div class="form-floating">
                            <input asp-for=@Model.AdminAccountInfo.Username type="text" class="form-control" id="username" placeholder="User Name">
                            <label for="username">User Name</label>
                        </div>
                    </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-info">Reset Password</button>
                </div>
            </form>
            <h5 class="fw-bold my-3">Administrator Information</h5>
            <form>
                <div class="row row-cols-1 row-cols-md-2 g-3">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for=@Model.AdministratorInfo.FirstName type="text" class="form-control" id="firstname" placeholder="First Name" disabled>
                            <label for="firstname">First Name</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for=@Model.AdministratorInfo.LastName type="text" class="form-control" id="lastname" placeholder="Last Name" disabled>
                            <label for="lastname">Last Name</label>
                        </div>
                    </div>
                <div class="col">
                    <div class="form-floating">
                            <input asp-for=@Model.AdministratorInfo.Email type="text" class="form-control" id="email" placeholder="Email" disabled>
                            <label for="email">Email</label>
                        </div>
                    </div>
                <div class="col">
                    <div class="form-floating">
                            <input asp-for=@Model.AdministratorInfo.ConfirmEmail type="text" class="form-control" id="confirmemail" placeholder="Confirm Email" disabled>
                            <label for="confirmemail">Confirm Email</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for=@Model.AdministratorInfo.MobileNo name="PhoneNumber" type="tel" id='patient_phone' class="form-control" placeholder="(201)555-0123" disabled>
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
                    <div class="d-flex justify-content-end">
                        <button id="admin_edit_btn"
                                class="btn btn-outline-info form_button d-flex align-items-center p-1 mx-2 my-3 px-3 fw-semibold" style="display:block !important;">
                            <p id="value" class="m-0">Edit</p>
                        </button>
                        <input type="submit" id="admin_save_btn"
                           class="btn btn-outline-info  d-flex align-items-center p-1 mx-2 my-3 px-3 fw-semibold" style="display:none !important;">
                    </div>
            </form>

            <h5 class="fw-bold my-3">Mailing & Billing Information</h5>
            <form>
                <div class="row row-cols-1 row-cols-md-2 g-3">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="@Model.adminBillingInfo.Address1" type="text" class="form-control" id="address1" placeholder="Address 1" disabled>
                            <label for="address1">Address 1</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for=@Model.adminBillingInfo.Address2 type="text" class="form-control" id="address2" placeholder="Address 2" disabled>
                            <label for="address2">Address 2</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for=@Model.adminBillingInfo.City type="text" class="form-control" id="city" placeholder="City" disabled>
                            <label for="city">City</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            
                        </div>
                    </div>
                
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input name="PhoneNumber" type="tel" id='friend_phone' class="form-control" placeholder="(201)555-0123" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="d-flex flex-row-reverse">
                        <button id="edit_btn"
                                class="btn btn-outline-info  d-flex align-items-center p-1 mx-2 my-3 px-3 fw-semibold" style="display:block !important;">
                            <p id="value" class="m-0">Edit</p>
                        </button>
                        <input type="submit" id="save_btn"
                               class="btn btn-outline-info  d-flex align-items-center p-1 mx-2 my-3 px-3 fw-semibold" style="display:none !important;">
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<script>
    document.getElementById("admin_edit_btn").addEventListener("click", function (e) {
        document.getElementById("admin_save_btn").removeAttribute("disabled");
        document.getElementById("admin_save_btn").removeAttribute("style");
        document.getElementById("email").removeAttribute("disabled");
        document.getElementById("confirmemail").removeAttribute("disabled");
        document.getElementById("patient_phone").removeAttribute("disabled");
        e.preventDefault();
    })
    document.getElementById("edit_btn").addEventListener("click", function (e) {
        document.getElementById("save_btn").removeAttribute("disabled");
        document.getElementById("save_btn").removeAttribute("style");
        document.getElementById("address1").removeAttribute("disabled");
        document.getElementById("address2").removeAttribute("disabled");
        document.getElementById("city").removeAttribute("disabled");
        document.getElementById("state").removeAttribute("disabled");
        document.getElementById("zip").removeAttribute("disabled");
        document.getElementById("friend_phone").removeAttribute("disabled");
        e.preventDefault();
    })
</script>
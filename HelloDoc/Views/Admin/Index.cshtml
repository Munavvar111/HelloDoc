@model List<DataAccessLayer.CustomModel.NewRequestTableVM>

@{
    Layout = "~/Views/Shared/_Layout4.cshtml";
}

@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
}
<div class="container-fluid mt-5">
    <div class="row row-cols-3 row-cols-lg-6 g-2 g-lg-3">
        <a class="col" id="linkNew">
            <div class="border text-white p-3" style="background-color:#203f9a">
                <div class="d-flex">
                    <span class="material-symbols-outlined d-none d-md-block">
                        person
                    </span>
                    <span>New</span>
                </div>
                <div>@ViewBag.NewCount</div>
            </div>
        </a>
        <a class="col" id="linkPanding">
            <div class="border p-3 text-info" style="background-color:#e5f2f8">
                <div class="d-flex">
                    <span class="material-symbols-outlined d-none d-md-block">
                        group
                    </span>
                    <span>Pending</span>
                </div>
                <div class="fw-bold">@ViewBag.PandingCount</div>
            </div>
        </a>
        <a class="col" id="linkActive">
            <div class="border p-3" style="background-color:#e9f0e8">
                <div class="d-flex">
                    <span class="material-symbols-outlined d-none d-md-block">
                        check_circle
                    </span>
            <span>Active</span>
                </div>
                <div>@ViewBag.activecount</div>
            </div>

        </a>
        <a class="col" id="linkConclude">
            <div class="border p-3 text-pink" style="background-color:#f7e6ee">
                <div class="d-flex">
                    <span class="material-symbols-outlined d-none d-md-block">
                        history
                    </span>
            <span>Conclude</span>
                </div>
                <div class="fw-blod">@ViewBag.conclude</div>
            </div>

        </a>
        <a class="col" id="linkToclose">
            <div class="border p-3" style="background-color:#e5eef5">
                <div class="d-flex">
                    <span class="material-symbols-outlined d-none d-md-block">
                        cancel
                    </span>
            <span >To Close</span>
                </div>
                <div class="fw-blod">@ViewBag.toclosed</div>
            </div>

        </a>
        <a class="col" id="linkUnpaid"> 
            <div class="border p-3" style="background-color: #efeef4">
                <div class="d-flex ">
                    <span class="material-symbols-outlined d-none d-md-block">
                        currency_exchange
                    </span>
            <span>Unpaid</span>
                </div>

                <div class="fw-blod">@ViewBag.unpaid</div>
            </div>

        </a>

    </div>
</div>
<div class="mt-3 mt-md-5 d-flex-column d-sm-flex justify-content-between align-items-center">
    <div class="">
        <p class="patient_text_size ">Patients<span class="text-primary" id="statuschange">(new)</span></p>
    </div>
    <div class="">
        <button type="button" class="btn btn-info text-white">
            <i class="bi bi-send  me-md-2"></i><span class="d-none d-lg-inline">Send Link</span>
        </button>
        <button type="button" class="btn btn-info  text-white">
            <i class="bi bi-pencil-square me-md-2"></i><span class="d-none d-lg-inline">
                Create
                Requests
            </span>
        </button>
        <button type="button" class="btn btn-info  text-white">
            <i class="bi bi-arrow-up-right "></i>
            <span class="d-none d-lg-inline ">Export</span>
        </button>
        <button type="button" class="btn btn-info  text-white">
            <i class="bi bi-box-arrow-up-right "></i><span class="d-none d-lg-inline">
                Export
                All
            </span>
        </button>
        <button type="button" class="btn btn-info  text-white">
            <i class="bi bi-person-plus  me-md-2"></i><span class="d-none d-lg-inline">
                Request DTY
                Support
            </span>
        </button>
    </div>
</div>


<div class=" row mt-4 mb-4 container-fluid ">
    <div class="col-xl-3 col-md-6 col-12 mb-2">
            <div class="input-group">

            <input class="form-control " type="search" placeholder="Search Patients"
                   aria-label="Search" id="searchInput">

            </div>
    </div>

    <div class="col-xl-3  col-md-6 col-12 mb-2">
        <div class="input-group rounded">
            <form class="w-100">
                <select class="form-select" aria-label="Default select example" id="filterSelect">
                    <option selected value=" ">All Regions</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </form>


        </div>
    </div>


    <div class="col-xl-1 col-md-2 col-2 mb-2 filter-item" data-value="">
        <button type="button" class="btn border-dark-subtle "> All</button>
    </div>
    <div class="col-xl-1 col-md-2 col-4 d-flex align-items-center gap-1 filter-item" data-value="1">
        <div class="rounded-5 bg-success border-5 " style="width:12px; height:12px;"></div> Patient
    </div>
    <div class="col-xl-2 col-md-3 col-6 d-flex align-items-center gap-1 filter-item" data-value="2">
        <div class="rounded-5 bg-warning border-5 " style="width:12px; height:12px;"></div>
        family/friend
    </div>

    <div class="col-xl-1 col-md-3 col-6 d-flex align-items-center gap-1 filter-item" data-value="3">
        <div class="rounded-5 bg-danger border-5 " style="width:12px; height:12px;"></div>
        Business
    </div>
    <div class="col-xl-1 col-md-2 col-6 d-flex align-items-center gap-1 filter-item" data-value="4">
        <div class="rounded-5  bg-info border-5 " style="width:12px; height:12px;"></div>
        Conciege
    </div>


</div>



<div id="partialContainer">

   
    <partial name="NewTablePartial" model="@Model"></partial>
    <partial name="PendingTablePartial" model="@Model"></partial>
    <partial name="ActiveTablePartial" model="@Model"></partial>
    <partial name="ConcludeTablePartial" model="@Model"></partial>
    <partial name="ToCloseTablePartial" model="@Model"></partial>
    <partial name="UnpaidTablePartial" model="@Model"></partial>
</div>
<div>
</div>

<div>
    <nav id="pagination" aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="#" data-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
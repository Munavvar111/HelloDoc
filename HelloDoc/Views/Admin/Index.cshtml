<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close bg-info border border-info" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="fs-1">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="mb-3"><span class="">Patient Name : <span class="text-info fw-1" id="patientname"></span></span></div>
                <form asp-action="CancelCase">
                    <input type="hidden" class="requestid" id="requestIdInputCancel" />
                    <div class="mb-3">

                        <select class="form-select " aria-label="Default select example" name="CancelReason" id="cancelReason">
                            @foreach (var cancelReason in Model[0].Cancel)
                            {
                                <option value="@cancelReason.CancelReasonId">@cancelReason.CancelCaseReson</option>
                            }
                        </select>
                        <span class="error text-danger"></span>
                    </div>
                    <div>
                        <div class="form-floating">
                            <textarea class="form-control"
                                      name="notes"
                                      class="additionalnote"
                                      placeholder="Leave a comment here"
                                      id="floatingTextarea2"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2">
                                Provide Additional Notes
                            </label>
                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-end">

                        <button class="btn btn-outline-info mx-4 CancelConfirm" type="button" id="CancelConfirm">Confirm</button>
                        <button type="button" class="btn btn-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
                <div>
                </div>
            </div>

        </div>
    </div>
</div>



<div class="modal fade" id="BlockModal" tabindex="-1" role="dialog" aria-labelledby="BlockCaseModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm Block</h1>
                <button type="button" class="btn-close  bg-light" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="">
                <input type="hidden" name="requestid" id="requestIdInputBlock" />
                <div class="modal-body">
                    <div class="d-flex flex-column">
                        <div class="mb-3  text-muted">
                            <div class="mb-3 fs-5">
                                <div class="mb-3"><span class="">Patient Name : <span class="text-info fw-1" id="patientname"></span></span></div>
                            </div>

                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Leave a comment here" id="blockreason" style="height: 100px" name="blockreason"></textarea>
                                <label for="floatingTextarea2" class="text-muted">Reason For Block Request</label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="submit" class="btn bg-info text-white" id="BlockCase">Confirm</button>
                        <button type="reset" class="btn border-info text-info">Cancel</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<div class="modal fade" id="assigncase" tabindex="-1" role="dialog" aria-labelledby="assigncase " aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Assign Request</h1>
                <button type="button" class="close bg-info border border-info" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="fs-1">&times;</span>
                </button>
            </div>
            <div class="modal-body text-start">
                <span class="text-start">To assign this request, search and select another physician</span>
                <form asp-action="">
                    <input type="hidden" name="requestid" id="requestIdInputCancel1" />
                    <select class="form-select mb-4 mt-4 regionDropdown" name="region" aria-label="Default select example" id="regionid">
                        <option value="" disabled selected>Narrow Search By Region</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    <select class="form-select mb-4 mt-4" name="physician" aria-label="Default select example" id="physicianDropdown">
                        <option value="" disabled selected>Select Physician</option>
                        <option value="One">One</option>
                        <option value="Two">Two</option>
                        <option value="Three">Three</option>
                    </select>
                    <div class="form-floating mb-4">
                        <textarea class="form-control" placeholder="Description"  name="notes"
                                  style="height: 100px"  id="description"></textarea>
                        <label for="floatingTextarea2" class="floating-label fs-6">
                            Description
                        </label>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-info confirmBtn" id="asigncasebutton" data-id="">Submit</button>
                        <button type="button" class="btn btn-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

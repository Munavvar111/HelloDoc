    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout4.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome To The Site</title>
    <style>
    
        .container {
            max-width: 800px;
            margin: 50px auto;
            text-align: center;
        }

        h1 {
            color: #007bff;
            margin-bottom: 20px;

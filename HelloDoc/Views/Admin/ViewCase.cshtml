<script>
    $(document).ready(function () {

        $('#cancelcaseview').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            console.log(button)
            var recipient = button.data('bs-requestid');
            var patientName = button.data('bs-patientname')
            console.log(recipient)
            var modal = $(this);
            modal.find('#patientname').text(patientName)
            modal.find('#requestIdInputCancel').val(recipient);
        });
        $('#cancelcaseview').on('hidden.bs.modal', function () {
            console.log("hidden")
            $('#cancelCaseForm').each(function () {
                this.reset();
            })

        });

    });

</script>
@{
	ViewData["Title"] = "ShiftReview";
	Layout = "~/Views/Shared/_Layout4.cshtml";
}
<div class="container">

	<div class="d-flex justify-content-between my-3">
		<div class="d-flex">
			<span class="fs-2 text-muted fw-bold">New Request</span>
		</div>
		<div class="d-flex justify-content-end">
			<a asp-controller="Admin" asp-action="Index" asp-area=""
			   class="btn btn-outline-info d-flex align-items-center">
				<span class="material-symbols-outlined"> chevron_left </span> Back
			</a>
		</div>
	</div>
	<div class="container bg-white p-3">
		<div class="d-flex justify-content-between flex-wrap	">

		<div class="">
			<select class="form-select" aria-label="Default select example" id="regionreview">
				<option selected value="0">All Regions</option>
				<option value="1">One</option>
				<option value="2">Two</option>
				<option value="3">Three</option>
			</select>
		</div>
		<div class="d-flex gap-2 flex-wrap">
			<button class="btn btn-success">View Current Month Shift</button>
				<button class="btn btn-success" id="approveSelectedButton" type="button">Approved Selected</button>
			<button class="btn btn-danger">Delete Selected</button>
		</div>
		</div>
		<div id="requestedshiftpartial">

		</div>
	</div>
</div>
<script>
	$(document).ready(function () {

		FetchShift();
		$("#regionreview").on("change", function () {
			console.log("fii")
			FetchShift();
		});
		function FetchShift() {
			var region = $("#regionreview").val();
			$.ajax({
				method: "GET",
				url: "/Admin/GetReviewShift",
				data: { region: region },
				success: function (response) {
					if (response.code == 401) {

						location.reload();
					}
					else {
						console.log("Function Success")
						$('#requestedshiftpartial').html(response)

					}

				},
				error: function () {
					console.log("Function Fail")
				}
			})
		}
	});
</script>

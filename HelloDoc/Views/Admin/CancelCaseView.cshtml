
<div class="modal fade" id="cancelcaseview" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close bg-info border border-info" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="fs-1">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="mb-3"><span class="">Patient Name : <span class="text-info fw-1" id="patientname"></span></span></div>
                <form asp-action="CancelCase" id="cancelCaseForm">
                    <input type="hidden" class="requestid" id="requestIdInputCancel" />
                    <div class="mb-3">



                        <select class="form-select " aria-label="Default select example" name="CancelReason" id="cancelReason">
                                <option selected disabled>Please Select The Reason</option>
                            @foreach (var cancelReason in ViewBag.Cancel)
                            {
                                <option value="@cancelReason.CancelReasonId">@cancelReason.CancelCaseReson</option>
                            }
                        </select>
                        <span class="error-CancelReason text-danger"></span>


                    </div>
                    <div>
                        <div class="form-floating">
                            <textarea class="form-control additionalnote"
                                      name="notes"
                                      placeholder="Leave a comment here"
                                      id="floatingTextarea2"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2">
                                Provide Additional Notes
                            </label>
                            <span class="error-notes text-danger"></span>

                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-end">

                        <button class="btn btn-outline-info mx-4 CancelConfirm" type="submit" id="CancelConfirm">Confirm</button>
                        <button type="button" class="btn btn-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
                <div>
                </div>
            </div>

        </div>
    </div>
</div>



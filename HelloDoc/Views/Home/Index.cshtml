    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link 
    rel="stylesheet"
    href="./css/patient_site.css">
    <title>Document</title>
    <style>
        .custom-color{
            background-color:rgb(16, 23, 126) !important;
            color: white;
            font-weight:500;
        }
    </style>
  </head>
  <body>
    <div class="container-fluid right">
      <div class="row ">
        <div class="d-flex justify-content-end">

            <button style="border: 1px solid aqua " class="mt-1 ">
                <i class="fa fa-moon-o fs-1"  aria-hidden="true" style="color: aqua "></i>
            </button>
        </div>
        
        <div class="row justify-content-center ">
            <div class="col-md-12 d-flex justify-content-center mb-5 ">
                <img src="~/content/hallodoc.png">
            </div>
            <div class="col-md-6 col-lg-8 col-sm-12">
                <div class="col-12  d-flex justify-content-center mb-5 ">
                    <button class="btn btn-info  w-100 btn-lg fw-bolder text-white">
                        <a asp-action='PatientSubmit' class="text-decoration-none text-white"> Submit A Requet</a>
                    </button>
                </div>
                <div class="col-12  d-flex justify-content-center">
                    <button class="btn  btn-lg w-100 custom-color">
                        <a asp-action='PatientRegister' class="text-decoration-none text-white">Register A Patient</a>
                    </button>
                </div>
            </div>
            <div class="d-flex justify-content-center">

              <div class="d-flex  justify-content-between" style="position: fixed;bottom: 0px;">
                  <p style="margin-right: 20px;"><a href="#" class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Terms Of Condition</a></p>
                  <p style="margin-right: 20px;"><a href="#" class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">|</a></p>
                  <p><a href="#" class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Privacy Policy</a></p>
              </div>
              
        
      </div>
        </div>
        
            
      </div>
    </div>

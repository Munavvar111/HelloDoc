@model DataAccessLayer.CustomModel.RequestOthers;
@{
    ViewData["Title"] = "Family/Friend Request";
}

<form class="container border rounded-3 p-3 p-md-5 mb-3  d-flex flex-column gap-4 bg-white" method="post" enctype="multipart/form-data">
    <div class="row row-cols-1 row-cols-md-2 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">Family/Friend Information</h5>
        </div>

        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com" 
                       asp-for="FirstNameOther"/>
                <label for="floatingInput focus-ring">Your First Name</label>
                <span asp-validation-for="FirstNameOther" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       asp-for="LastNameOther"/>
                <label for="floatingInput">Your Last Name</label>
                <span asp-validation-for="LastNameOther" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="border rounded-2 tel-container">
                <input id="phone1"
                       type="tel"
                       class="form-control border-0 tel-input"
                       asp-for="PhoneNumberOther"
                       />
            </div>
        </div>

        <div class="col">
            <div class="form-floating">
                <input type="email"
                       class="form-control"
                       id="phone"
                       placeholder="+91 9876543210" 
                       asp-for="EmailOther"/>
                <label for="floatingInput">Your Email</label>
                <span asp-validation-for="EmailOther"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       asp-for="Relation"/>
                <label for="floatingInput">Relation with Patient</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">Patient Information</h5>
        </div>
        <div class="col-12 col-md-12">
            <div class="form-floating">
                <textarea class="form-control"
                          placeholder="Leave a comment here"
                          id="floatingTextarea2"
                          asp-for="Notes"
                          style="height: 100px"></textarea>
                <label for="floatingTextarea2">
                    Enter Brief detail of Symptoms
                    <span class="d-none d-sm-inline">(Optional)</span>
                </label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com" 
                       asp-for="FirstName"/>
                <label for="floatingInput">First Name</label>
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com" 
                       asp-for="LastName"/>
                <label for="floatingInput">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="date"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com" 
                       asp-for="BirthDate"/>
                <label for="floatingInput">Date of Birth</label>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">Patient Contact Information</h5>
        </div>

        <div class="col">
            <div class="form-floating">
                <input type="email"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       asp-for="Email"/>
                <label for="floatingInput">Email</label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="col">
            <div class="border rounded-2 tel-container">
                <input id="phone2"
                       type="tel"
                       class="form-control border-0 tel-input"
                       asp-for="PhoneNumber"
                       />
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">Patient Location</h5>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" 
                       asp-for="Street"/>
                <label for="floatingInput">Street</label>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" 
                       asp-for="City"/>
                <label for="floatingInput">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <select class="form-select " aria-label="Default select example" name="state" id="cancelReason" asp-for="State">

                    <option selected disabled>Select The State</option>
                    @if (Model.Regions != null)
                    {
                        
                    @foreach (var region in Model.Regions)
                    {
                        <option value="@region.Name">@region.Name</option>
                    }
                    }

                </select>
                <span asp-validation-for="State" class="text-danger"></span>

            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" 
                       asp-for="Zipcode"/>
                <label for="floatingInput">Zip Code</label>
                <span asp-validation-for="Zipcode" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" />
                <label for="floatingInput">Room #/ Suite (Optional)</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">(Optional) Upload Photo or Document</h5>
        </div>
        <div class="col">
            <div class="input-group input-group-lg">
                <div id="fileName" class="form-control fs-6 align-middle">
                    Select File
                </div>
                <input type="file" asp-for="File" class="form-control" id="fileInput" hidden />
                <label class="input-group-text btn btn-info text-light"
                       for="fileInput">
                    <span class="material-symbols-outlined me-2">
                        cloud_upload
                    </span>
                    <span class="d-none d-md-inline">Upload</span>
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="d-flex gap-3 align-items-center justify-content-end">
            <button class="btn btn-info text-light" type="submit">
                Submit
            </button>
            <a href="submitrequest.html" class="btn btn-outline-info d-flex align-items-center h-100">
                Cancel
            </a>
        </div>
    </div>
</form>





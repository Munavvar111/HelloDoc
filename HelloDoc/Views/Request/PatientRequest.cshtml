@model DataAccessLayer.CustomModel.RequestModel;

@{
    ViewData["Title"] = "Patient Request";
}
<form id="patientRequestForm"    class="container border rounded-3 p-3 p-md-5 mb-3 d-flex flex-column gap-4 bg-white" method="post" enctype="multipart/form-data">
    <div class="row row-cols-1 row-cols-md-2 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">Patient Information</h5>
        </div>
        <div class="col-12 col-md-12">
            <div class="form-floating">
                <textarea class="form-control"
                          placeholder="Leave a comment here"
                          id="floatingTextarea2"
                          style="height: 100px"></textarea>
                <label for="floatingTextarea2">
                    Enter Brief detail of Symptoms
                    <span class="d-none d-sm-inline">(Optional)</span>
                </label>
            </div>
        </div>  
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com" 
                       asp-for="Firstname"/>
                <label for="floatingInput" asp-for="Firstname">First Name</label>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       asp-for="Lastname" />
                <label for="floatingInput" asp-for="Lastname">Last Name</label>
                <span asp-validation-for="Lastname" class="text-danger"></span>

            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="date"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       asp-for="BirthDate"
                       />
                <label for="floatingInput">Date of Birth</label>
                <span asp-validation-for="BirthDate" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">Patient Contact Information</h5>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="email"
                       class="form-control"
                       id="Email"
                       placeholder="name@example.com"
                       asp-for="Email"
                       onchange="CheckAvailability()" />
                <label for="floatingInput" asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>
        <div class="col">
            <div class="border rounded-2 tel-container">
                <input id="phone1"
                       type="tel"
                       class="form-control border-0 tel-input"
                       name="phone"
                        />
            </div>
        </div>


        <div class="col"  id="pwdcol" style="display:none">
            <div class="form-floating">
                <input type="password"
                       class="form-control"
                       id="floatingInput"
                       placeholder="*****" />
                <label for="floatingInput">Password</label>
            </div>
        </div>
        <div class="col" id="pwdrow" style="display:none">
            <div class="form-floating">
                <input type="password"
                       class="form-control"
                       id="floatingInput"
                       placeholder="*****" />
                <label for="floatingInput">Confirm Password</label>
            </div>
        </div>


    </div>
    <div class="row row-cols-1 row-cols-md-2 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">Patient Location</h5>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" 
                       asp-for="Street"/>
                <label for="floatingInput" asp-for="Street">Street</label>
                <span asp-validation-for="Street" class="text-danger"></span>

            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" 
                       asp-for="City"/>
                <label for="floatingInput" asp-for="City">City</label>
                <span asp-validation-for="City" class="text-danger"></span>

            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" asp-for="State"/>
                <label for="floatingInput" asp-for="State">State</label>
                <span asp-validation-for="State" class="text-danger"></span>

            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" asp-for="Zipcode"/>
                <label for="floatingInput" asp-for="Zipcode"> Zip Code</label>
                <span asp-validation-for="Zipcode" class="text-danger"></span>

            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input type="text"
                       class="form-control"
                       id="floatingInput"
                       placeholder="Rajpath Road" />
                <label for="floatingInput">Room #/ Suite (Optional)</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 g-3">
        <div class="col-12 col-md-12">
            <h5 class="fw-semibold">(Optional) Upload Photo or Document</h5>
        </div>
        <div class="col">
            <div class="input-group input-group-lg ">
                <div id="fileName" asp-for="FileName" class="form-control fs-6 align-middle">
                    Select File
                </div>
                <input type="file" asp-for="File" class="form-control" id="fileInput" hidden />
                <label asp-for="File" class="input-group-text btn btn-info text-light"
                       for="fileInput">
                    <span class="material-symbols-outlined me-2">
                        cloud_upload
                    </span>
                    <span class="d-none d-md-inline">Upload</span>
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="d-flex gap-3 align-items-center justify-content-end">
            <button class="btn btn-info text-light" type="submit">
                Submit
            </button>
            <a href="submitrequest.html" class="btn btn-outline-info d-flex align-items-center h-100">
                Cancel
            </a>
        </div>
    </div>
</form>


<script src="~/js/fileInput.js"></script>

<script>
    const phone1 = document.querySelector("#phone1");
    const phoneInput1 = window.intlTelInput(phone1, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });
</script>

<script src="https://code.jquery.com/jquery-1.11.3.js" type="text/javascript"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    var pwdrow = $("#pwdrow");
    var pwdcol = $("#pwdcol");

    function CheckAvailability() {
        var email = $("#Email").val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("CheckEmail", "Request")",
            data: JSON.stringify( email),
            contentType: "application/json; charset=utf-8",  
            dataType: "json",
            success: function (response) {
                if (response) {
                    // Email not available.
                    pwdrow.show();
                    pwdcol.show();
                } else {
                    // Email  available.
                    pwdrow.hide();
                    pwdcol.hide();
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    };
</script>


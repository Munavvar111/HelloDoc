                <div class="col-12 col-md-12">
                    <h5 class="fw-semibold">Patient Location</h5>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="Rajpath Road"
                               asp-for="Street"/>
                        <label for="floatingInput">Street</label>

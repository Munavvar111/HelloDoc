                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="Rajpath Road"
                               asp-for="City"/>
                        <label for="floatingInput">City</label>
                   <span asp-validation-for="City" class="text-danger"></span>

                    </div>
                </div>
        <div class="col">
            <div class="form-floating">
                <select class="form-select " aria-label="Default select example" name="state" id="cancelReason" asp-for="State">

                    <option selected disabled>Select The State</option>
                    @if(Model!=null && Model.Regions != null)
                    {
                        
                    @foreach (var region in Model.Regions)
                    {
                        <option value="@region.Name">@region.Name</option>
                    }
                    }

                </select>
                <span asp-validation-for="State" class="text-danger"></span>

            </div>
        </div>
                <div class="col">
                    <div class="form-floating">
                        <input type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="Rajpath Road"
                               asp-for="Zipcode"/>
                        <label for="floatingInput">Zip Code</label>
                   <span asp-validation-for="Zipcode" class="text-danger"></span>

                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="Rajpath Road" />
                        <label for="floatingInput">Room #/ Suite (Optional)</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="d-flex gap-3 align-items-center justify-content-end">
                    <button class="btn btn-info text-light" type="submit">
                        Submit
                    </button>
            <button type="reset"
                       class="btn btn-outline-info d-flex align-items-center h-100">
                        Cancel
                    </button>
                </div>
            </div>
        </form>
  

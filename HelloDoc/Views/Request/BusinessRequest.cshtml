    });
    document.getElementById("fileInput").onchange = function () {
        let filePath = this.value;
        let allowedExtensions = [".jpg", ".pdf"];

        let extension = filePath.substring(filePath.lastIndexOf('.'));
        extension = extension.toLowerCase();

        if (!allowedExtensions.includes(extension)) {
            toastr.error("Please Select The Pdf Or Jpg")
            this.value = ""; // Clear file selection if invalid
            return false; // Prevent further processing
        }

        let path = filePath.substr(filePath.lastIndexOf('\\') + 1);
        document.getElementById("fileName").innerText = path;
    };
</script>
<script>
    $(document).ready(function () {
        // Initialize the validation plugin on your form
        var validator = $('form').validate();

        // Attach event listener to the form's submit event
        $('form').submit(function (event) {
            // Check if the form is valid
            if (!validator.form()) {
                // Form is not valid, show validation errors
                $('.text-danger').show();

                // Prevent the form from being submitted
                event.preventDefault();
            } else {
                // Form is valid, hide all validation errors
                $('.text-danger').hide();
            }
        });

        // Attach event listener to the reset button to hide validation errors
        $('button[type="reset"]').click(function () {
            // Hide all validation errors
            $('.text-danger').hide();
        });

        // Attach event listener to form fields to hide validation errors on click
        $('input, textarea, select').click(function () {
            $(this).next('.text-danger').hide();
        });
    });

</script>

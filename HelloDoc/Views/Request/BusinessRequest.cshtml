                    <h5 class="fw-semibold">Patient Contact Information</h5>
                </div>

                <div class="col">
                    <div class="form-floating">
                        <input type="email"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" 
                               asp-for="Email"/>
                        <label for="floatingInput">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>


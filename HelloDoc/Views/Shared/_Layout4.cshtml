@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json;
@{
	string? username = Context.Session.GetString("Username");

	int userId = Context.Session.GetInt32("UserId") ?? 0; // Use a default value if session data is not available
	var userPermissionsJson = Context.Session.GetString("UserPermissions");

	var userPermissions = !string.IsNullOrEmpty(userPermissionsJson) ? JsonConvert.DeserializeObject<List<string>>(userPermissionsJson) : null;

}

<script>
	// Check if either username or userId is empty, or if userPermissions is null
	if (@userPermissionsJson == null) {
		// Redirect to login page
		window.location.href = "/Login";
	}
</script>


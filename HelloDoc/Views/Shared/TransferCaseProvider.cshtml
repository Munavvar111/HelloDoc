<div class="modal fade" id="transfercaseprovider" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Transfer Request</h1>
                <button type="button" class="btn-close  bg-light" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="" id="transferproviderCaseForm">
                <input type="hidden" name="requestid" id="requestIdInputTransferProvider" />
                <div class="modal-body">
                    <div class="d-flex flex-column">
                        <div class="mb-3  text-muted">
                            <div class="mb-3 fs-5">
                                <div class="mb-3"><span class="">This Request will be transffered to admin</span></div>
                            </div>

                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Leave a comment here" id="transferdec" style="height: 100px" name="transferdec"></textarea>
                                <label for="floatingTextarea2" class="text-muted">Description</label>
                                <span class="text-danger error-transferdec remove"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="submit" class="btn bg-info text-white" id="TransferProviderCaseSubmit">Confirm</button>
                        <button type="reset" class="btn border-info text-info">Cancel</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
